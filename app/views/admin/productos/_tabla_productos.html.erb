<table class="table">
    <tr>
    
        <th>Imagen</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Categoria</th>
        <th>Acciones</th>
    </tr>
    <% productos.each do |producto| %>
        <tr>
            <td>
                <% if producto.imagenes.attached? %>
                    <%= image_tag producto.imagenes.first, style: "width: 25%" %>
                <% else %>
                    No hay fotos registradas
                <% end %>
            </td>
              
            
            <td><%= link_to producto.nombre, admin_producto_path(producto) %></td>
            <td><%= producto.precio %></td>
            <td><%= producto.cantidad %></td>
            <td><%= producto.categoria.categoria %></td>
            <td>

                        <%= link_to admin_editar_producto_path(producto), class: "btn btn-warning boton-editar" do %>
                            <i class="bi bi-pencil-fill"></i>
                        <% end %>
                        <%= link_to admin_producto_path(producto), method: :delete, data: { confirm: 'Â¿Quieres eliminar el producto?' }, class: "btn btn-danger"  do %>
                            <i class="bi bi-trash-fill"></i>                  
                        <% end %>
                    </div>
                </div>


                
            
            </td>
        </tr>
    <% end %>
</table>