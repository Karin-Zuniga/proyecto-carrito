    <div class="col-10">
        <h2>
            AGREGAR PRODUCTOS AL PEDIDO <%= @pedido.codigo %> ðŸ“¦
        </h2>    
    </div>
    <div class="col-2 text-end">
        <%= link_to "Cancelar", admin_editar_pedido_path(@pedido), class: 'btn btn-secondary' %>
